{% extends 'base.html.twig' %}

{% block title %}Voir un produit
{% endblock %}

{% block body %}

	{% include "partials/header.html.twig" %}

	{% include "partials/nav.html.twig" %}

	<section id="product-show">

		<div class="has-text-centered my-6">
			<a href="{{path('app_home')}}" class="fontGrey fontGreyHover">
				<i class="fas fa-undo-alt"></i>
				Retour à l'accueil</a>
		</div>

		<h1 class="has-text-centered mt-6 is-size-6-mobile is-size-4">
			<strong>Produit :
				{{product.title }}</strong>
		</h1>


		<ul class="has-text-centered">
			<li class="my-5">
				<span class="has-text-weight-bold">Rayon :
				</span>
				{{ product.rayon }}</li>
			<li class="my-5">
				<span class="has-text-weight-bold">Sous rayon :
				</span>
				{{ product.sousRayon }}</li>
			<li class="my-5">
				<span class="has-text-weight-bold">Date :
				</span>
				{{ product.date | date('d/m/Y') }}</li>
			<li class="my-5">
				<span class="has-text-weight-bold">Prix :
				</span>
				{{ product.price }}
				€</li>
			<li class="mt-5">
				<span class="has-text-weight-bold">Référence :
				</span>
				{{ product.reference }}</li>
		</ul>

		<div class="flash-error clear-product my-5 py-2 is-size-6-mobile is-size-5 has-text-centered">
			<a href="{{path('product_clear', {id : product.id })}}">
				Supprimer le produit
			</a>
		</div>


	</section>
	{% block footer %}
		{% include "partials/footer.html.twig" %}
	{% endblock %}
{% endblock %}
